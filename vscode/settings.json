{
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Nord",
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "terminal.integrated.fontFamily": "'MesloLGS NF'",
    "C_Cpp.clang_format_fallbackStyle": "Google",
    "clang-format.fallbackStyle": "Google",
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.wordBasedSuggestions": false
    },
    "debug.onTaskErrors": "debugAnyway",
    "go.toolsManagement.autoUpdate": true,
    "editor.bracketPairColorization.enabled": true,
    "indentRainbow.colorOnWhiteSpaceOnly": true,
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    "editor.formatOnSave": true,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "editor.inlineSuggest.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "cpp": false
    },
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false
    },
    "redhat.telemetry.enabled": true,
    "vsicons.dontShowNewVersionMessage": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "window.zoomLevel": 1,
    "latex-workshop.chktex.path": "/Library/TeX/texbin/chktex",
    "latex-workshop.latexindent.path": "/Library/TeX/texbin/latexindent",
    "latex-workshop.synctex.path": "/Library/TeX/texbin/synctex",
    "latex-workshop.texcount.path": "/Library/TeX/texbin/texcount",
    "latex-workshop.texdoc.path": "/Library/TeX/texbin/texdoc",
    "latex-workshop.latex.clean.command": "/Library/TeX/texbin/latexmk",
    "latex-workshop.latex.outDir": "%DIR%",
    "latex-workshop.chktex.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "--shell-escape", // added this flag
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape", // added this flag
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ],
            "env": {}
        }
    ],
    "latex-workshop.latex.autoClean.run": "onBuilt",
}